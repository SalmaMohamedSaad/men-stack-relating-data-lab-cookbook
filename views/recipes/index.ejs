<!-- views/listings/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Recipes</title>
  </head>
  <body>
    <%- include("../partials/_navbar.ejs") %>
    <h1>Here's all the Recipes</h1>
    <a href="/recipes/new">Add a New Recipe</a>
    <ul>
      <% recipes.forEach((recipe) => { %>
      <li>
        <%= recipe.name %> owned by <%= recipe.owner.username %>
        <a href="recipes/<%= recipe._id %>"> View More Details</a>
      </li>
      <% })%>
    </ul>
  </body>
</html>
