<!-- views/listings/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Ingredients</title>
  </head>
  <body>
    <%- include("../partials/_navbar.ejs") %>
    <h1>Here's all the Ingredients</h1>
    <a href="/ingredients/new">Add a New Ingredient</a>
    <ul>
      <% ingredients.forEach((ingredient) => { %>

      <form
        action="/ingredients/<%= ingredient._id %>?_method=DELETE"
        method="POST"
      >
        <label><%= ingredient.name %></label>
        <button type="submit">Delete this Ingredient</button>
      </form>
      <br />

      <% })%>
    </ul>
  </body>
</html>
